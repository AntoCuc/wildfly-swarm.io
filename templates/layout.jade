    script(src='/lib/bootstrap/js/bootstrap.min.js')
  body
    block body
      #layout-main.container-narrow
        .masthead
          ul.nav.nav-pills.pull-right
            li.active
              a(href='/') Home
            li
              a(href='/posts') Blog
          h3.muted WildFly Swarm
        block main
